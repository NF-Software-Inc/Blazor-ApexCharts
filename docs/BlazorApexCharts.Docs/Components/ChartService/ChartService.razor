@page "/chartservice"

<h3>Chart Service</h3>

@if (!showCharts)
{
    <Button OnClick="LoadJavascript">Load Javascript</Button>
    <Button OnClick="SetGlobalOptions">Set Global Options</Button>
    <Button OnClick="@(_=> showCharts =! showCharts)">Show charts</Button>
}
else
{


    <Button OnClick="TestChart">Toogle Theme</Button>

    <ApexChart TItem="Order"
                Height="200">

        <ApexPointSeries TItem="Order"
                         Items="SampleData.GetOrders()"
                         Name="Gross Value"
                         XValue="@(e => e.Country)"
                         YAggregate="@(e => e.Sum(e => e.GrossValue))"
                         OrderByDescending="e=>e.Y"
                         SeriesType="SeriesType.Bar" />


    </ApexChart>

    <ApexChart TItem="Order"
                Height="200">

        <ApexPointSeries TItem="Order"
                         Items="SampleData.GetOrders()"
                         Name="Gross Value"
                         XValue="@(e => e.Country)"
                         YAggregate="@(e => e.Sum(e => e.GrossValue))"
                         OrderByDescending="e=>e.Y"
                         SeriesType="SeriesType.Bar" />


    </ApexChart>
}